{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "comp-64",
  "type": "registry:component",
  "registryDependencies": [
    "https://loveui.dev/building-blocks/r/label.json",
    "https://loveui.dev/building-blocks/r/textarea.json"
  ],
  "files": [
    {
      "path": "registry/default/components/comp-64.tsx",
      "content": "import { useId } from \"react\"\n\nimport { Label } from \"@/registry/building-blocks/default/ui/label\"\nimport { Textarea } from \"@/registry/building-blocks/default/ui/textarea\"\n\nexport default function Component() {\n  const id = useId()\n  return (\n    <div className=\"*:not-first:mt-2\">\n      <Label htmlFor={id}>Textarea with error</Label>\n      <Textarea\n        id={id}\n        placeholder=\"Leave a comment\"\n        defaultValue=\"Hello!\"\n        aria-invalid\n      />\n      <p\n        className=\"mt-2 text-xs text-destructive\"\n        role=\"alert\"\n        aria-live=\"polite\"\n      >\n        Message should be at least 10 characters\n      </p>\n    </div>\n  )\n}\n",
      "type": "registry:component"
    }
  ],
  "meta": {
    "tags": [
      "label",
      "textarea",
      "error"
    ]
  }
}